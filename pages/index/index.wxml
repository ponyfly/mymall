<view class="container">
  <view class="swiper-container">
    <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" circular="{{circular}}" autoplay="{{autoplay}}">
      <block wx:for="{{banners}}" wx:key="id">
        <swiper-item>
          <image src="{{item.picUrl}}"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="type-container">
    <scroll-view class="type-navbar" scroll-x>
      <block wx:for="{{categories}}" wx:key="id">
        <view id="{{item.id}}" class="type-navbar-item {{activeCategoryId == item.id ? 'type-navbar-on' : ''}}" bindtap="tabClick">{{item.name}}</view>
      </block>
    </scroll-view>
  </view>
</view>
